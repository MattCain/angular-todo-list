#header
   .navbar-form
      border none

main
   .todo
      list-style none
      .panel-footer
         a
            display block
            cursor pointer
            .remove
               font-size 16px
               line-height 23px
            .fave
               font-size 20px
               &.glyphicon-star
                  color #FCD402

      &.ng-enter,
      &.ng-leave,
      &.ng-move
        transition 0.5s linear all

      &.ng-enter,
      &.ng-move,
        opacity 0

      &.ng-move.ng-move-active,
      &.ng-enter.ng-enter-active
        opacity 1

      &.ng-leave
        opacity 1

      &.ng-leave.ng-leave-active
        opacity 0

   #no-results
      transition 0.5s linear all
      &.ng-hide-add,
      &.ng-hide-remove
         opacity 0